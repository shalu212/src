         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

  <servlet>
    <servlet-name>App</servlet-name>
    <servlet-class>com.example.App</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>App</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

</web-app>

